<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/default_background"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.bendangle.bluefruit.le.connect.app.MainHelpActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <!--  Serial Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f3f3f3"
            android:text="Serial Number"/>

        <EditText
            android:id="@+id/serialNumber"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Serial Number"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Length of pipe Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Length of pipe"/>

        <EditText
            android:id="@+id/pipelength"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Length of pipe"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Pipe Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Pipe Number"/>

        <EditText
            android:id="@+id/pipeNumber"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Pipe Number"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Heat Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Heat Number"/>

        <EditText
            android:id="@+id/heatNumber"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Heat Number"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Latitude Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Latitude"/>

        <EditText
            android:id="@+id/latitude"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Latitude"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Longtitude Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Longitude"/>

        <EditText
            android:id="@+id/longitude"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Longitude"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Chain Age Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Chain Age"/>

        <EditText
            android:id="@+id/chainAge"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Chain Age"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Ovality Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Ovality"/>

        <EditText
            android:id="@+id/ovality"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Ovality"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Tempurature Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Temperature"/>

        <EditText
            android:id="@+id/temperature"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="Temperature"
            android:background="#f3f3f3"
            android:textColor="#696969"
            android:inputType="number"/>

        <!-- Note of pipe Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#f3f3f3"
            android:text="Note"/>

        <EditText
            android:id="@+id/note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:background="#f3f3f3"
            android:textColor="#696969"/>

    </LinearLayout>
</ScrollView>
